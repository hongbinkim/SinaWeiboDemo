<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <ImageView
        android:id="@+id/line_image"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fragment_back_color"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/common_back_selector">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:id="@+id/image_view"
            android:src="@drawable/me_album"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:text="Small Text"
            android:id="@+id/text_view"
            android:textSize="@dimen/font_15sp"
            android:textColor="@color/font_discover"
            android:layout_toEndOf="@+id/image_view"
            android:layout_alignTop="@+id/image_view"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1.5dp"
            android:layout_marginLeft="5dp"
            android:textSize="@dimen/font_12sp"
            android:text="(19)"
            android:id="@+id/count_text"
            android:textColor="@color/font_intro"
            android:layout_alignTop="@+id/text_view"
            android:layout_toEndOf="@+id/text_view"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/common_icon_arrow"
            android:id="@+id/arrow_image"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/line_image2"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/fragment_back_color"/>
</LinearLayout>